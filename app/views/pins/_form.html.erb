<%= simple_form_for @pin, html: { multipart: true} do |f| %>
  <% if @pin.errors.any? %>
    <h2><%= pluralize(@pin.errors.count, "error") %> evenimentul nu s-a putut salva:</h2>
    <ul>
      <% @pin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :image, "Ataseaza o poza" %><br>
  <%= f.file_field :image, required: true %><br>
  <br>
    <%= f.label "Denumirea traseului" %><br>
    <%= f.text_area :title, input_html: { class: 'form-control',  required: true}, :maxlength => 50 %><br>


  <br>
  <%= f.label "Descrierea traseului" %><br>
  <%= f.text_area :description, input_html: { class: 'form-control'}, :rows=>20, :cols=>85 %>


  <br>



  <%= f.submit "Salveaza si publica"%>

<% end %>
