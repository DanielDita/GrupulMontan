    <div class="home-sections">
      <section class="blog3">
      <div class="flex flex--center">

          <div class="col-52">
            <p id="notice"><%= notice %></p>

            <p>
              <strong>Title:</strong>
              <%= @album.title %>
            </p>

            <% @album_attachments.each do |p| %>

            <div id="myImg"><%= image_tag (p.avatar_url), data: { behavior: 'modal' }, :width => 300 %></div>


            <%= link_to "Edit Attachment", edit_album_attachment_path(p) %>
            <%= link_to 'Edit', edit_album_path(@album) %> |
            <%= link_to 'Back', albums_path %>


            <div id="myModal" class="modal">

              <span class="close">Ã—</span>
              <div class="modal-content">
                <%= image_tag (p.avatar_url), data: { behavior: 'modal' }, :width => 700 %></div>

            </div>

            <% end %>


          </div>

      </div>
      </section>
    </div>

  </div>

</div>
<script>
// Get the modal
var modal = document.getElementById("myModal");

// Get the image and insert it inside the modal - use its "alt" text as a caption
var img = document.getElementById('myImg');
var modalImg = document.getElementsByClassName("modal-content");

img.onclick = function(){
    modal.style.display = "block";
    modalImg.src = this.src;

}

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on <span> (x), close the modal
span.onclick = function() {
    modal.style.display = "none";
}
</script>

